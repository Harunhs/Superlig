<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/matchOne"
                android:layout_width="250dp"
                android:layout_height="40dp"

                />

            <TextView
                android:id="@+id/matchTwo"
                android:layout_width="250dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/matchThree"
                android:layout_width="250dp"
                android:layout_height="40dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"


            >

            <TextView

                android:id="@+id/resultOne"
                android:layout_width="150dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/resultTwo"
                android:layout_width="150dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/resultThree"
                android:layout_width="150dp"
                android:layout_height="40dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/playMatches"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layoutOne"
        android:text="Play Matches" />

    <Button
        android:id="@+id/playNext"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/layoutOne"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@+id/playMatches"
        android:layout_toRightOf="@+id/playMatches"
        android:text="Play Next Week" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playNext"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:text="TEAM NAME" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="Match" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="Win" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="Loose" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="Draw" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="Point" />


    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>