<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layoutOne"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:id="@+id/matchOne"

                />

            <TextView
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:id="@+id/matchTwo"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:id="@+id/matchThree"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"


            >
            <TextView

                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/resultOne"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/resultTwo"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/resultThree"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layoutOne"
        android:id="@+id/playMatches"
        android:text="Play Matches"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/layoutOne"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@+id/playMatches"
        android:layout_toRightOf="@+id/playMatches"
        android:id="@+id/playNext"
        android:text="Play Next Week"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/playNext"
        >

        <TextView
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:text="TEAM NAME"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="Match"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="Win"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="Loose"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="Draw"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="Point"
            />



    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>